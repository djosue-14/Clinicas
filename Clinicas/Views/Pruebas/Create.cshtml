@{
ViewBag.Title = "Create";
}
<div class="card">
    <div class="card-header bg-teal text-white text-center">
        <h3 class="h3">Pruebas</h3>
    </div>

    <div class="card-body">
        <div class="card-title lead text-center">Nueva prueba</div>
        <form id="formCreatePrueba">


            <div class="row">
                <div class="col-md-6 form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" name="Nombre" id="Nombre" class="form-control">
                </div>
                <div class="col-md-6 form-group">
                    <label for="Direccion">Direccion</label>
                    <input type="text" name="Direccion" id="Direccion" class="form-control">
                </div>
                <div class="col-md-6 form-group">
                    <label for="Dpi">DPI</label>
                    <input type="text" name="Dpi" id="Dpi" class="form-control">
                </div>
                <div class="col-md-12 text-right">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Guardar</button>
                </div>
            </div>
        </form>

    </div>
</div>


@section scripts {
    <script>
        new PruebaCreate();
    </script>
}